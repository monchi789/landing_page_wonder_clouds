---
import { Image } from "astro:assets";

import imageContat from '../assets/contacts.png';
import UserIcon from "./icons/userIcon.astro";
import EmailIcon from "./icons/emailIcon.astro";
import PhoneIcon from "./icons/phoneIcon.astro";
---

<div class="mt-12 md:mt-20 md:mx-24 lg:mx-[12rem]">
  <h2 class="text-center font-bold text-[2rem] mb-6 md:text-[2.5rem]">Cont√°ctanos</h2>

  <div class="flex flex-col-reverse gap-y-5 gap-x-12 items-center md:flex-row">
    <div class="">
      <Image src={imageContat} alt='Imagen para la parte de contactos' />
    </div>
    <div class="p-10 w-full md:w-2/3">
      <form action="" class="flex flex-col gap-y-8">
        <div class="flex">
          <UserIcon />
          <input name="nombre_formulario" type="text" placeholder="Nombre" class="w-full md:w-2/3 text-gray-900 outline-none border-0 border-b-2">
        </div>
        <div class="flex">
          <EmailIcon />
          <input name="nombre_formulario" type="email" placeholder="Correo" class="w-full md:w-2/3 text-gray-900 outline-none border-0 border-b-2">
        </div>
        <div class="flex">
          <PhoneIcon />
          <input name="nombre_formulario" type="text" placeholder="Telefono" class="w-full md:w-2/3 text-gray-900 outline-none border-0 border-b-2">
        </div>
        <div class="flex">
          <input name="nombre_formulario" type="button" value="Enviar" class="w-full md:w-2/3 m-5 text-xl border-solid border-gray border-2 text-gray-400 px-2 py-2 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:bg-[#A5BDD9] duration-200 hover:border-white hover:text-white cursor-pointer focus:outline-none focus:ring focus:ring-[#A5BDD9] ">
        </div>
      </form>
    </div>
  </div>
</div>

